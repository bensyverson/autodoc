<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>

    <link rel="stylesheet" type="text/css" href="docs.css" />
    <script src="http://pivotal.github.io/jasmine/lib/jasmine-1.3.1/jasmine.js"></script>
    <script src="http://lodash.com/_js/lodash.js"></script>
    <script src="http://benchmarkjs.com/_js/benchmark.js"></script>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://danieltao.com/HighTables/hightables.js"></script>
    <script type="text/javascript" src="docs.js"></script>

    {{#javascripts}}
    <script type="text/javascript" src="{{{.}}}"></script>
    {{/javascripts}}

    <script type="text/javascript">
      var benchmarks = {};
    </script>
</head>

<body>
    <main>
        <header>
            <h1>{{name}}</h1>
            <div class="description">
                {{{description}}}
            </div>
        </header>

        <div id="spec-failures"></div>

        <div class="columns">
            <div class="left-column">
                <nav>
                    <ul>
                        {{#docs}}
                        <li><a href="#{{identifier}}">{{shortName}}</a></li>
                        {{/docs}}
                    </ul>
                </nav>
            </div>

            <div class="right-column">
                {{#docs}}
                <section id="{{identifier}}">
                    <h1>
                        {{shortName}}
                        <small>{{name}}</small>
                    </h1>

                    {{{description}}}

                    {{#hasSignature}}
                    <div class="signature">
                        <h3>Signature</h3>

                        <pre><code>{{{signature}}}</code></pre>

                        <table id="{{name}}-parameters">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type(s)</th>
                                    <th>Description</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#params}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{type}}</td>
                                    <td>{{{description}}}</td>
                                </tr>
                                {{/params}}

                            </tbody>

                            {{^isConstructor}}
                            <tfoot>
                                {{#returns}}
                                <tr>
                                    <td>returns</td>
                                    <td>{{type}}</td>
                                    <td>{{{description}}}</td>
                                </tr>
                                {{/returns}}
                            </tfoot>
                            {{/isConstructor}}
                        </table>
                    </div>
                    {{/hasSignature}}

                    {{#hasExamples}}
                    <div class="examples">
                        <h3>Examples</h3>
                        <table id="{{name}}-examples">
                            <thead>
                                <tr>
                                    <th>Input</th>
                                    <th>Expected</th>
                                    <th>Result</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#examples.examples}}
                                <tr id="example-{{identifier}}-{{id}}">
                                    <td>{{{input}}}</td>
                                    <td>{{{output}}}</td>
                                    <td></td>
                                </tr>
                                {{/examples.examples}}
                            </tbody>
                        </table>
                    </div>
                    {{/hasExamples}}

                    {{#hasBenchmarks}}
                    <div class="perf">
                        <h3>Benchmarks</h3>
                        <table id="{{identifier}}-perf-tests">
                            <!-- Gah, HighTables is stupid... doesn't account for <thead> :( -->
                            <tr>
                                <th>Implementation</th>
                                <th>Ops/second</th>
                            </tr>

                            {{#benchmarks.benchmarks}}
                            <tr id="perf-test-{{identifier}}-{{id}}">
                                <td>{{{name}}}</td>
                                <td></td>
                            </tr>
                            {{/benchmarks.benchmarks}}
                        </table>

                        <button>Run performance benchmarks</button>
                    </div>
                    {{/hasBenchmarks}}

                    <script type="text/javascript">
                      describe('{{{name}}}', function() {
                        {{#examples}}

                        {{{setup}}}

                        {{#examples}}
                        (function() {
                          var spec = it('returns {{output}} for {{input}}', function() {
                            var result = {{{input}}};
                            expect(result).toEqual({{{output}}});
                          });

                          spec.exampleId = '{{identifier}}-{{id}}';
                          spec.input = '{{input}}';
                          spec.output = '{{output}}';
                        }());

                        {{/examples}}
                        {{/examples}}
                      });

                      (function() {
                        {{#benchmarks}}

                        {{{setup}}}

                        benchmarks['{{identifier}}'] = [

                          {{#benchmarks}}
                          new Benchmark('{{name}}', {
                              id: '{{identifier}}-{{id}}',
                              fn: function() {
                                  {{{impl}}};
                              }
                          }),

                          {{/benchmarks}}
                          {{/benchmarks}}
                        ];
                      }());
                    </script>
                </section>
                {{/docs}}
            </div>
        </div>
    </main>
</body>

</html>
